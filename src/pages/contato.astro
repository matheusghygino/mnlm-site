---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactInfo from "../components/contato/ContactInfo.astro";
import ContactForm from "../components/contato/ContactForm.astro";
---

<BaseLayout title="Contato | MNLM">
    <main class="bg-gray-100 py-12">
        <div class="text-center space-y-4 pb-8">
            <h1 class="text-4xl">CONTATO</h1>
            <h3 class="text-2xl">
                Entre em contato com o Movimento Nacional de Luta pela Moradia.
                Estamos presentes em todo o Brasil.
            </h3>
        </div>
        <section class="py-20">
            <div class="mx-auto max-w-6xl px-6">
                <!-- layout principal -->
                <div class="flex flex-col gap-12 md:flex-row">
                    <ContactInfo />
                    <ContactForm />
                </div>
            </div>
        </section>
    </main>
</BaseLayout>
